@using Resources;

@model IEnumerable<Core.Dtos.AspNetUserDto>

@{
    ViewBag.Title = @Resources.Admin;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administration Users</h2>

<div class="panel panel-info">
    <div class="panel-heading">
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.ActionLink(@Resources.Roles, "UserRolesControl", new { id = item.Id }, new { @class = "btn btn-warning" })
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new
                       {
                           @onclick = "return confirm('Are you sure?');",
                           @class = "glyphicon glyphicon-trash"
                       })
                        </td>
                    </tr>
                }

            </table>
        }
    </div>
    <div class="panel-footer">
        <p>
            @Html.ActionLink(@Resources.Backto, "Index", "Admin", new { }, new { @class = "btn btn-success" })
        </p>
    </div>
</div>